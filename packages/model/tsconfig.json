{
    "compilerOptions": {
        "declaration": true,
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": ["esnext", "dom"]
    },
    "exclude": [
        "node_modules",
        "dist/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
